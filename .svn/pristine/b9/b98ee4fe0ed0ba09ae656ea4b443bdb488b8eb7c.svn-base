//Language setting
Route::get('/language',function(){
	$language_code = Input::get('language');

	if($language_code == 1){
		Session::set('languageid',1);
	}
	elseif($language_code == 2){
		Session::set('languageid',2);
	}
	else{
		Session::set('languageid',1);
	}
return Redirect::back();
});
